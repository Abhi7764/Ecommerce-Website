<%- include("header")%>
<center><a href="/products/add" class="btn btn-primary">Add Product</a></center>
  <div class="album py-5 bg-body-tertiary">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <%products.forEach((item)=>{%>

          <div class="col">
            <div class="card shadow-sm">
              <a href="/products/productDetails/<%=item._id%>">
                <img src="<%=item.image%>" width="100%" height="225%" />
              </a>
              <div class="card-body">
                <p class="card-text">
                  <%=item.description%>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%=item.name%>
                  </div>
                  <small class="text-body-secondary">
                    <%=item.price%>
                  </small>
                  <div class="btn-group">
                    <a href="/products/edit/<%=item._id%>">
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </a>
                    <a href="/products/delete/<%=item._id%>">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                      </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%})%>
      </div>
    </div>
  </div>
  </main>
<%- include("footer")%>